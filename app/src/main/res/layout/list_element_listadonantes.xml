<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/cvlistadonante"
android:layout_height="wrap_content"
android:layout_width="match_parent"
android:animateLayoutChanges="true"
app:cardCornerRadius="20dp"
app:cardElevation="4dp"
app:cardUseCompatPadding="true"
android:gravity="center_horizontal"
android:layout_marginRight="3dp"
android:layout_marginLeft="3dp"
android:layout_marginTop="2dp"
    >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/BDnombreTV"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:text="Juan Perez"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/BDgrupoTV"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:text="A+"
        android:textColor="@color/primary_dark"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/BDdepartamentoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BDnombreTV"
        android:layout_alignStart="@+id/BDnombreTV"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:text="Montevideo"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/BDEmailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BDdepartamentoTV"
        android:layout_alignStart="@+id/BDdepartamentoTV"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:text="juanperez@gmail.com"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

</RelativeLayout>

</androidx.cardview.widget.CardView>



